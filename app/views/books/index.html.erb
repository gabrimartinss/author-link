<table class="table table-striped">
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Year</th>
      <th>Pages</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.description %></td>
        <td><%= book.year %></td>
        <td><%= book.pages %></td>
        <td><%= book.author.description %></td>
        <td>
          <%= link_to "Show", book, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_book_path(book), class: "btn btn-primary btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="lead">
  <%= link_to "New Book", new_book_path, class: "btn btn-primary btn-sml" %>
</p>

