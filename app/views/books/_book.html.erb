<div id="<%= dom_id book %>" class="card bg-dark text-white mb-3">
  <div class="card-header">
    <h3 class="card-title"><%= book.description %></h3>
  </div>
  <div class="card-body">
    <form>
      <div class="form-group row">
        <label for="staticDescription" class="col-sm-2 col-form-label"><strong>Description:</strong></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext text-white" id="staticDescription" value="<%= book.description %>">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticYear" class="col-sm-2 col-form-label"><strong>Year:</strong></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext text-white" id="staticYear" value="<%= book.year %>">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticPages" class="col-sm-2 col-form-label"><strong>Pages:</strong></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext text-white" id="staticPages" value="<%= book.pages %>">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticAuthor" class="col-sm-2 col-form-label"><strong>Author:</strong></label>
        <div class="col-sm-10">
          <input type="text" readonly class="form-control-plaintext text-danger" id="staticAuthor" value="<%= book.author.description %>">
        </div>
      </div>
    </form>
  </div>
</div>
